// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id Int @id @default(autoincrement())
  fullName String
  email String @unique
  password String

  @@map("users")
}

model Product {
  id Int @id @default(autoincrement())
  image String?
  name String
  price BigInt

  @@map("products")
}